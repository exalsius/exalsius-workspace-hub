{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "DiLoCo Training Helm Chart Values",
  "description": "Schema for validating diloco-training Helm chart values",
  "type": "object",
  "$defs": {
    "global": {
      "type": "object",
      "description": "Global settings shared across subcharts",
      "properties": {
        "deploymentName": {
          "type": "string",
          "description": "Name of the deployment",
          "minLength": 1
        },
        "deploymentNamespace": {
          "type": "string",
          "description": "Kubernetes namespace for the deployment",
          "default": "default",
          "minLength": 1
        }
      },
      "required": ["deploymentName", "deploymentNamespace"],
      "additionalProperties": false
    },
    "deploymentNumReplicas": {
      "type": "integer",
      "description": "Number of deployment replicas. DO NOT CHANGE THIS PARAMETER",
      "const": 1,
      "default": 1
    },
    "resources": {
      "type": "object",
      "description": "Resource configuration for a single worker pod",
      "properties": {
        "gpuCount": {
          "type": "number",
          "description": "Number of GPUs per node (also determines PyTorch processes per node)",
          "minimum": 0
        },
        "gpuVendor": {
          "type": "string",
          "description": "GPU vendor configuration",
          "enum": ["NVIDIA", "AMD"]
        },
        "gpuType": {
          "type": "string",
          "description": "GPU type/model",
          "minLength": 1
        },
        "gpuMemory": {
          "type": "number",
          "description": "GPU memory in gigabytes",
          "minimum": 0
        },
        "cpuCores": {
          "type": "number",
          "description": "Number of CPU cores to allocate",
          "minimum": 0.1
        },
        "memoryGb": {
          "type": "number",
          "description": "Memory allocation in gigabytes",
          "minimum": 0.1
        },
        "storageGb": {
          "type": "number",
          "description": "Persistent storage size in gigabytes",
          "minimum": 1
        }
      },
      "required": ["gpuCount", "cpuCores", "memoryGb"],
      "additionalProperties": false
    }
  },
  "properties": {
    "global": {
      "$ref": "#/$defs/global"
    },
    "deploymentNumReplicas": {
      "$ref": "#/$defs/deploymentNumReplicas"
    },
    "deploymentImage": {
      "type": "string",
      "description": "Container image for the diloco training deployment",
      "default": "ghcr.io/exalsius/diloco-training:dev",
      "minLength": 1
    },
    "ephemeralStorageGb": {
      "type": "number",
      "description": "Ephemeral storage size in gigabytes",
      "minimum": 1,
      "default": 50
    },
    "elastic": {
      "type": "object",
      "description": "PyTorch Elastic training configuration with etcd rendezvous",
      "additionalProperties": true
    },
    "diloco": {
      "type": "object",
      "description": "DiLoCo Training Environment Variables",
      "additionalProperties": true
    },
    "etcd": {
      "type": "object",
      "description": "etcd subchart configuration (bitnami/etcd). Set enabled: false to use an external etcd cluster. This is a subchart, so additional properties are allowed.",
      "additionalProperties": true
    },
    "resources": {
      "$ref": "#/$defs/resources"
    }
  },
  "required": [
    "global",
    "deploymentNumReplicas",
    "deploymentImage",
    "ephemeralStorageGb",
    "elastic",
    "diloco",
    "etcd",
    "resources"
  ],
  "additionalProperties": false
}
