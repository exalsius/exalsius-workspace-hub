{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Performance Profiling Workspace Helm Chart Values",
  "description": "Schema for validating performance-profiling Helm chart values",
  "type": "object",
  "$defs": {
    "global": {
      "type": "object",
      "description": "Global settings shared across subcharts",
      "properties": {
        "deploymentName": {
          "type": "string",
          "description": "Name of the deployment",
          "minLength": 1
        },
        "deploymentNamespace": {
          "type": "string",
          "description": "Kubernetes namespace for the deployment",
          "default": "default",
          "minLength": 1
        }
      },
      "required": ["deploymentName", "deploymentNamespace"],
      "additionalProperties": false
    },
    "deploymentNumReplicas": {
      "type": "integer",
      "description": "Number of deployment replicas.",
      "const": 1,
      "default": 1
    },
    "resources": {
      "type": "object",
      "description": "Resource configuration",
      "properties": {
        "gpuCount": {
          "type": "integer",
          "description": "Number of GPUs to allocate",
          "minimum": 0
        },
        "gpuVendor": {
          "type": "string",
          "description": "GPU vendor configuration",
          "enum": ["NVIDIA", "AMD"]
        },
        "gpuType": {
          "type": "string",
          "description": "GPU type/model",
          "minLength": 1
        },
        "gpuMemory": {
          "type": "integer",
          "description": "GPU memory in gigabytes",
          "minimum": 0
        },
        "cpuCores": {
          "type": "integer",
          "description": "Number of CPU cores to allocate",
          "minimum": 1
        },
        "memoryGb": {
          "type": "integer",
          "description": "Memory allocation in gigabytes",
          "minimum": 1
        },
        "storageGb": {
          "type": "integer",
          "description": "Persistent storage size in gigabytes",
          "minimum": 1
        }
      },
      "required": ["gpuCount", "cpuCores", "memoryGb"],
      "additionalProperties": false
    }
  },
  "properties": {
    "global": {
      "$ref": "#/$defs/global"
    },
    "deploymentNumReplicas": {
      "$ref": "#/$defs/deploymentNumReplicas"
    },
    "deploymentImage": {
      "type": "string",
      "description": "Container image for the performance profiling job",
      "default": "ghcr.io/exalsius/exalsius-performance-modeling:dev",
      "minLength": 1
    },
    "nodes": {
      "type": "integer",
      "description": "Number of nodes for distributed training",
      "minimum": 1,
      "default": 1
    },
    "extraEnvironmentVariables": {
      "type": "array",
      "description": "Additional environment variables for the job",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "value": {
            "type": "string"
          }
        },
        "required": ["name", "value"],
        "additionalProperties": false
      },
      "default": []
    },
    "resources": {
      "$ref": "#/$defs/resources"
    }
  },
  "required": [
    "global",
    "deploymentNumReplicas",
    "deploymentImage",
    "nodes",
    "extraEnvironmentVariables",
    "resources"
  ],
  "additionalProperties": false
}
