{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Ray LLM Service Helm Chart Values",
  "description": "Schema for validating ray-llm-service Helm chart values",
  "type": "object",
  "$defs": {
    "global": {
      "type": "object",
      "description": "Global settings shared across subcharts",
      "properties": {
        "deploymentName": {
          "type": "string",
          "description": "Name of the deployment",
          "minLength": 1
        },
        "deploymentNamespace": {
          "type": "string",
          "description": "Kubernetes namespace for the deployment",
          "default": "default",
          "minLength": 1
        }
      },
      "required": ["deploymentName", "deploymentNamespace"],
      "additionalProperties": false
    },
    "deploymentNumReplicas": {
      "type": "integer",
      "description": "Number of deployment replicas. DO NOT CHANGE THIS PARAMETER",
      "const": 1,
      "default": 1
    },
    "resources": {
      "type": "object",
      "description": "Resource configuration",
      "properties": {
        "gpuCount": {
          "type": "number",
          "description": "Number of GPUs to allocate",
          "minimum": 0
        },
        "gpuVendor": {
          "type": "string",
          "description": "GPU vendor configuration",
          "enum": ["NVIDIA", "AMD"]
        },
        "gpuType": {
          "type": "string",
          "description": "GPU type/model",
          "minLength": 1
        },
        "gpuMemory": {
          "type": "number",
          "description": "GPU memory in gigabytes",
          "minimum": 0
        },
        "cpuCores": {
          "type": "number",
          "description": "Number of CPU cores to allocate",
          "minimum": 0.1
        },
        "memoryGb": {
          "type": "number",
          "description": "Memory allocation in gigabytes",
          "minimum": 0.1
        },
        "storageGb": {
          "type": "number",
          "description": "Persistent storage size in gigabytes",
          "minimum": 1
        }
      },
      "required": ["gpuCount", "gpuVendor", "gpuType", "gpuMemory", "cpuCores", "memoryGb", "storageGb"],
      "additionalProperties": false
    }
  },
  "properties": {
    "global": {
      "$ref": "#/$defs/global"
    },
    "deploymentNumReplicas": {
      "$ref": "#/$defs/deploymentNumReplicas"
    },
    "deploymentImage": {
      "type": "string",
      "description": "Container image for the ray LLM service deployment",
      "default": "rayproject/ray-ml:2.46.0.0e19ea",
      "minLength": 1
    },
    "ephemeralStorageGb": {
      "type": "number",
      "description": "Ephemeral storage size in gigabytes",
      "minimum": 1,
      "default": 50
    },
    "huggingfaceToken": {
      "type": "string",
      "description": "Hugging Face token for access-restricted models",
      "default": ""
    },
    "numModelReplicas": {
      "type": "number",
      "description": "Number of model replicas",
      "minimum": 1,
      "default": 1
    },
    "runtimeEnvironmentPipPackages": {
      "type": "string",
      "description": "Comma-separated list of pip packages for the runtime environment",
      "default": "numpy==1.26.4,vllm==0.9.0,ray==2.46.0",
      "minLength": 1
    },
    "huggingfaceModel": {
      "type": "string",
      "description": "Hugging Face model identifier",
      "default": "microsoft/phi-4",
      "minLength": 1
    },
    "tensorParallelSize": {
      "type": "number",
      "description": "Tensor parallel size for model parallelism",
      "minimum": 1,
      "default": 1
    },
    "pipelineParallelSize": {
      "type": "number",
      "description": "Pipeline parallel size for model parallelism",
      "minimum": 1,
      "default": 1
    },
    "placementGroupStrategy": {
      "type": "string",
      "description": "Placement group strategy for Ray",
      "default": "PACK",
      "minLength": 1
    },
    "cpuPerActor": {
      "type": "number",
      "description": "Number of CPUs per actor",
      "minimum": 1,
      "default": 16
    },
    "gpuPerActor": {
      "type": "number",
      "description": "Number of GPUs per actor",
      "minimum": 1,
      "default": 1
    },
    "resources": {
      "$ref": "#/$defs/resources"
    }
  },
  "required": [
    "global",
    "deploymentNumReplicas",
    "deploymentImage",
    "ephemeralStorageGb",
    "numModelReplicas",
    "runtimeEnvironmentPipPackages",
    "huggingfaceModel",
    "tensorParallelSize",
    "pipelineParallelSize",
    "placementGroupStrategy",
    "cpuPerActor",
    "gpuPerActor",
    "resources"
  ],
  "additionalProperties": false
}
