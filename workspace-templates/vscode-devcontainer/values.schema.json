{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "VSCode DevContainer Helm Chart Values",
  "description": "Schema for validating vscode-devcontainer Helm chart values",
  "type": "object",
  "$defs": {
    "global": {
      "type": "object",
      "description": "Global settings shared across subcharts",
      "properties": {
        "deploymentName": {
          "type": "string",
          "description": "Name of the deployment",
          "minLength": 1
        },
        "deploymentNamespace": {
          "type": "string",
          "description": "Kubernetes namespace for the deployment",
          "default": "default",
          "minLength": 1
        }
      },
      "required": ["deploymentName", "deploymentNamespace"],
      "additionalProperties": false
    },
    "deploymentNumReplicas": {
      "type": "integer",
      "description": "Number of deployment replicas. DO NOT CHANGE THIS PARAMETER",
      "const": 1,
      "default": 1
    },
    "resources": {
      "type": "object",
      "description": "Resource configuration",
      "properties": {
        "gpuCount": {
          "type": "number",
          "description": "Number of GPUs to allocate",
          "minimum": 0
        },
        "gpuVendor": {
          "type": "string",
          "description": "GPU vendor configuration",
          "enum": ["NVIDIA", "AMD"]
        },
        "gpuType": {
          "type": "string",
          "description": "GPU type/model",
          "minLength": 1
        },
        "gpuMemory": {
          "type": "number",
          "description": "GPU memory in gigabytes",
          "minimum": 0
        },
        "cpuCores": {
          "type": "number",
          "description": "Number of CPU cores to allocate",
          "minimum": 0.1
        },
        "memoryGb": {
          "type": "number",
          "description": "Memory allocation in gigabytes",
          "minimum": 0.1
        },
        "storageGb": {
          "type": "number",
          "description": "Persistent storage size in gigabytes",
          "minimum": 1
        }
      },
      "required": ["gpuCount", "gpuVendor", "cpuCores", "memoryGb", "storageGb"],
      "additionalProperties": false
    }
  },
  "properties": {
    "global": {
      "$ref": "#/$defs/global"
    },
    "deploymentNumReplicas": {
      "$ref": "#/$defs/deploymentNumReplicas"
    },
    "deploymentImage": {
      "type": "string",
      "description": "Container image for the devcontainer deployment. If empty, image will be auto-selected based on gpuVendor",
      "default": ""
    },
    "ephemeralStorageGb": {
      "type": "number",
      "description": "Ephemeral storage size in gigabytes",
      "minimum": 1,
      "default": 50
    },
    "sshPassword": {
      "type": "string",
      "description": "Password for SSH authentication",
      "default": "testpassword",
      "minLength": 1
    },
    "sshPublicKey": {
      "type": "string",
      "description": "SSH public key for authentication (multi-line string, can contain multiple keys)",
      "default": ""
    },
    "shmSizeGb": {
      "type": "number",
      "description": "Shared memory storage size in gigabytes",
      "minimum": 1,
      "default": 8
    },
    "resources": {
      "$ref": "#/$defs/resources"
    }
  },
  "required": [
    "global",
    "deploymentNumReplicas",
    "deploymentImage",
    "ephemeralStorageGb",
    "sshPassword",
    "sshPublicKey",
    "shmSizeGb",
    "resources"
  ],
  "additionalProperties": false
}
